<?xml version="1.0" encoding="UTF-8"?>

<configuration status="OFF">
    <appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%t %-5level - %msg%n"/>
        </Console>

        <Console name="ZestSqlConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n"/>
        </Console>

    </appenders>

    <loggers>

        <logger name="zest_sql" level="debug" additivity="false">
            <appender-ref ref="ZestSqlConsole" />
        </logger>

        <Root level="info">
            <appender-ref ref="Console"/>
        </Root>
    </loggers>
</configuration>